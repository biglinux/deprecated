#!/bin/sh

OIFS=$IFS
IFS='\'

############
#Check for removable
#Checa se eh removivel
############
if [ "$(cat /sys/block/$(df "$*" 2> /dev/null | cut -f1 -d" " | grep "/" | sed 's|/dev/||g;s|[1-9].*||g')/removable 2> /dev/null)" = "1" ];
then
    forcehup=y
fi

############
#Check for usb
#Checa se eh usb
############

if [ "$(udisksctl info -b $(df "$*" 2> /dev/null | cut -f1 -d" " | grep "/" | sed 's|[1-9].*||g') 2> /dev/null | grep -e "-usb-")" != "" ];
then
    forcehup=y
fi


if [ "$forcehup" = "y" ];
then
    ##########
    # HUP SIGNAL and sync files
    # Envia o sinal de desconexao HUP e sincroniza os arquivos
    ##########
    fuser -k -m -HUP "$*"
    sync
    /bin/umount.distrib -l $*
    IFS=$OIFS
else
    /bin/umount.distrib $*
    IFS=$OIFS
fi


###########
#Debug
###########
