#! /bin/sh

set -e

package_name=hhvm-autorestart
mkdir -p /usr/share/dpkgdivert/

if [ -z "$package_name" ]; then
    print >&2 "Internal Error. Please report a bug."
    exit 1;
fi

case "$1" in
  install)
    dpkg-divert --package $package_name --divert /usr/share/dpkgdivert/hhvm --rename /etc/init.d/hhvm
    ;;
  upgrade)
        if [ "$(dpkg-divert --list /etc/init.d/hhvm)" = "" ]
        then
	    dpkg-divert --package $package_name --divert /usr/share/dpkgdivert/hhvm --rename /etc/init.d/hhvm
	fi

;;
  abort-upgrade)
    ;;
  *) echo "$0: didn't understand being called with \`$1'" 1>&2
     exit 0;;
esac

exit 0
