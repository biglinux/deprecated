style "radiocheck" {
	
	xthickness 				= 3
	ythickness 				= 3
	
    fg[ACTIVE] = @fg_color

	engine "pixmap" 
	{
		image 
		{
			function 		= FOCUS
			recolorable 	= TRUE
			file 			= "Check-Radio/highlight.png"
			border 			= { 20, 0, 0, 2}
			stretch 		= TRUE
		}
		# Unchecked
		image 
		{
			function 		    = CHECK
			recolorable 	    = TRUE
			state 			    = NORMAL
			shadow 			    = OUT
			overlay_file 		= "Check-Radio/checkbox-unchecked.png"
			overlay_stretch 	= FALSE
		}
		# Unchecked (Hover)
		image 
		{
			function 		    = CHECK
			recolorable 		= TRUE
			state 			    = PRELIGHT
			shadow 			    = OUT
			overlay_file 		= "Check-Radio/checkbox-unchecked.png"
			overlay_stretch 	= FALSE
		}
		# Unchecked
		image 
		{
			function        	= CHECK
			recolorable     	= TRUE
			state 			    = ACTIVE
			shadow          	= OUT
			overlay_file   		= "Check-Radio/checkbox-unchecked.png"
			overlay_stretch 	= FALSE
		}
		# Unchecked 
		image 
		{
			function        	= CHECK
			recolorable     	= TRUE
			state 			    = INSENSITIVE
			shadow          	= OUT
			overlay_file    	= "Check-Radio/checkbox-unchecked-insensitive.png"
			overlay_stretch 	= FALSE
		}
		# Checked
		image 
		{
			function        	= CHECK
			recolorable    		= TRUE
			state 			    = NORMAL
			shadow          	= IN
			overlay_file    	= "Check-Radio/checkbox-checked.png"
			overlay_stretch 	= FALSE
		}
		# Checked (Hover)
		image 
		{
			function        	= CHECK
			recolorable     	= TRUE
			state 			    = PRELIGHT
			shadow         		= IN
			overlay_file    	= "Check-Radio/checkbox-checked.png"
			overlay_stretch 	= FALSE
		}
		# Checked
		image 
		{
			function        	= CHECK
			recolorable     	= TRUE
			state 			    = ACTIVE
			shadow          	= IN
			overlay_file    	= "Check-Radio/checkbox-checked.png"
			overlay_stretch 	= FALSE
		}
		image
		{
			function			= CHECK
			recolorable			= TRUE
			state				= SELECTED
			shadow				= IN
			overlay_file		= "Check-Radio/checkbox-checked.png"
			overlay_stretch		= FALSE
		}
		# Unchecked
		image 
		{
			function        	= CHECK
			recolorable     	= TRUE
			state			    = INSENSITIVE
			shadow          	= IN
			overlay_file    	= "Check-Radio/checkbox-checked-insensitive.png"
			overlay_stretch 	= FALSE
		}
		#Use this image to draw the highlight when a line with a check box
		#is moused over.
		image 
		{
			function        	= FLAT_BOX
			recolorable     	= TRUE
			stretch			    = TRUE
			file           		= "Check-Radio/highlight.png"
			border			    = { 2, 2, 2, 2 }
		}
		# Not selected
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state			    = NORMAL
			shadow          	= OUT
			overlay_file    	= "Check-Radio/radio-unselected.svg"
			overlay_stretch 	= FALSE
		}
		# Not selected (Hover)
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state 			    = PRELIGHT
			shadow         		= OUT
			overlay_file    	= "Check-Radio/radio-unselected.svg"
			overlay_stretch 	= FALSE
		}
		# Unselected
		image 
		{
			function        	= OPTION
			recolorable    		= TRUE
			state 			    = ACTIVE
			shadow          	= OUT
			overlay_file    	= "Check-Radio/radio-unselected.svg"
			overlay_stretch 	= FALSE
		}
		# Unselected Insensitive
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state 			    = INSENSITIVE
			shadow          	= OUT
			overlay_file    	= "Check-Radio/radio-unselected-insensitive.svg"
			overlay_stretch 	= FALSE
		}
		# Selected
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state 			= NORMAL
			shadow          	= IN
			overlay_file    	= "Check-Radio/radio-selected.svg"
			overlay_stretch 	= FALSE
		}
		# Selected (Hover)
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state 			= PRELIGHT
			shadow          	= IN
			overlay_file    	= "Check-Radio/radio-selected.svg"
			overlay_stretch 	= FALSE
		}
		# Selected
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state 			= ACTIVE
			shadow          	= IN
			overlay_file    	= "Check-Radio/radio-selected.svg"
			overlay_stretch 	= FALSE
		}
		# Selected Insensitive
		image 
		{
			function        	= OPTION
			recolorable     	= TRUE
			state 			= INSENSITIVE
			shadow          	= IN
			overlay_file    	= "Check-Radio/radio-selected-insensitive.svg"
			overlay_stretch 	= FALSE
		}
		#Use this image to draw the highlight when a line with a radiobutton
		#is moused over.
		image 
		{
			function        	= FLAT_BOX
			recolorable     	= TRUE
			stretch			    = TRUE
			file            	= "Check-Radio/highlight.png"
			border          	= { 2, 2, 2, 2 }
		}
		image
		{
			function		= BOX
			state			= NORMAL
			file			= "Button/button-normal.png"
			border			= { 3, 3, 3, 3}
			stretch			= TRUE
		}
		image
		{
			function		= BOX
			state			= PRELIGHT
			shadow			= OUT
			file			= "Button/button-prelight.png"
			border			= { 3, 3, 3, 3}
			stretch			= TRUE
		}
		image
		{
			function		= BOX
			state			= ACTIVE
			file			= "Button/button-pressed.png"
			border			= { 6, 4, 6, 4}
			stretch			= TRUE
		}
		image
		{
			function		= BOX
			state			= PRELIGHT
			shadow			= IN
			file			= "Button/button-pressed-prelight.png"
			border			= { 6, 4, 6, 4}
			stretch			= TRUE
		}
		image
		{
			function		= BOX
			state			= INSENSITIVE
			file			= "Button/button-insensitive.png"
			border			= { 5, 3, 5, 3}
			stretch			= TRUE
		}
	}
}
